<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Casino" x:Class="Casino.MainWindow"
        Title="MainWindow" Height="450" Width="525">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF6ED853"/>
                <GradientStop Color="#FF27B008" Offset="0.746"/>
            </RadialGradientBrush>
        </Grid.Background>

        <StackPanel x:Name="SPCasino" Height="160" VerticalAlignment="Top">
        </StackPanel>
        <!--
        <StackPanel x:Name="SPPlayer" Height="160" VerticalAlignment="Top" Margin="5,160,0,0" Orientation="Horizontal"/>
        -->
        <ItemsControl x:Name="ICPlayer" Margin="10,164,10,45" HorizontalContentAlignment="Center" HorizontalAlignment="Center" BorderThickness="5" Width="497">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

        </ItemsControl>
        <Button Content="Start" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="127" Margin="5,0,0,5" Click="StartGame"/>
        <Button Content="Close" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="116" Margin="0,0,5,5"/>
        <Button Content="Еще" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="127" Margin="137,0,0,5" Click="Button_Click"/>
    </Grid>
</Window>
